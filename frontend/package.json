{
  "name": "myshop-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:report": "cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports/all,overwrite=false,html=false,json=true",
    "report:merge:all": "mochawesome-merge cypress/reports/all/*.json > cypress/reports/all/report.json",
    "report:generate:all": "marge cypress/reports/all/report.json -f report -o cypress/reports/all",
    "test:report:all": "npm run cypress:run:report && npm run report:merge:all && npm run report:generate:all",
    "test:report:open:all": "npm run test:report:all && cmd /c start \"\" \"cypress/reports/all/report.html\"",
    "save:videos": "cmd /c \"if not exist cypress\\reports\\all mkdir cypress\\reports\\all && move /Y cypress\\videos\\*.mp4 cypress\\reports\\all\\\""
  },
  "dependencies": {
    "next": "^13.4.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cypress": "^12.17.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.3.0",
    "postcss": "^8.4.24",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^3.4.7"
  }
}
